{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-shadow": ["error", { "builtinGlobals": false, "hoist": "functions", "allow": ["err"] }],
        "no-unused-vars": ["error", { "argsIgnorePattern": "_" }]
    }
}